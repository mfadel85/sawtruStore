	function isValidBarcode(barcode) {
	  // check length
	  if (barcode.length < 8 || barcode.length > 18 ||
	      (barcode.length != 8 && barcode.length != 12 &&
	      barcode.length != 13 && barcode.length != 14 &&	      
	      barcode.length != 18)) {
	    return false;
	  }

	  return true;
	}
